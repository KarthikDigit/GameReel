<resources>

    <!-- Base application theme. -->
    <style name="ILG_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ILG_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ILG_colorPrimaryDark</item>
        <item name="colorAccent">@color/ILG_colorAccent</item>
        <item name="titleTextColor">@color/ILG_colorMainFont</item>
        <item name="android:windowTitleSize">18sp</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ILG_TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ILG_ToolBarTheme">
        <item name="android:textColorSecondary">@color/ILG_colorMainFont</item>
    </style>
</resources>
